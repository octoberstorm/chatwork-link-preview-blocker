{
    "name": "Chatwork Link Preview Blocker",
    "description": "For Chatwork users whom do not want to see preview content of links in current chat",
    "version": "0.1",
    "manifest_version": 2,
    "browser_action": {
        "default_title": "Chatwork Link Preview Blocker",
        "default_icon": "icons/icon-16.png"

    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://linkpreview.chatwork.com/*",
        "https://www.chatwork.com/*"
    ],
    "background": {
        "scripts": ["link-blocker.js"],
        "persistent": true
    },
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
  }